.container
  h2.section-title Meet our Speakers
  // http://davist11.github.io/css-diamond-grid/#
  .grid
    .grid-item.grid-title
      .grid-inner
        a(href='/speakers') Speakers
    // <article class="speaker">
    .grid-item.photo
      .grid-inner(style="background-image: url('/img/people/#')")
        .attendee-img-shadow
        .attendee-img-shadow-yellow
        .speaker-meta-box
          .speaker-meta.grid-layout
            a(href='/speakers/#')
              p.speaker-name #
            p.speaker-affiliation #
            p.speaker-details #
    .speaker-info-section
      article.speaker
        .speaker-info-section
          .speaker-meta
            p.speaker-name
              a(href='/speakers/#') #
            p.speaker-affiliation #
            p.speaker-session
              strong Talk / 
              a(href='/speakers/#') #
            p.speaker-abstract #
      // </article>
      .speaker-info
        p.speaker-abstract #
        h2.speaker-bio-title About #
        p.speaker-bio #
    // .speaker-details
    .speaker-grid-last
      .testimonial
        blockquote
          | KOTESOL organizes fantastic, inspiring conferences.
          cite
            | Angela
            span KOTESOL member since 2018
  .page-button-container
    a.page-button.button(href='/speakers') View All Speaker Details &#x1F449;
